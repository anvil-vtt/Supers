{
  "env": {
    "browser": true,
    "es2021": true,
    "jquery": true
  },
  "extends": ["eslint:recommended", "@typhonjs-fvtt/eslint-config-foundry.js"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-shadow": [
      "error",
      {
        "builtinGlobals": true,
        "hoist": "all",
        "allow": ["event"]
      }
    ]
  }
}
